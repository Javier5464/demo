<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.example.demo.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          style="-fx-background-color: #f0f8ff; -fx-padding: 20;">

    <!-- Title Section -->
    <Label text="Inicio de Sesión" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a4d69;"/>

    <!-- Input Fields -->
    <Label text="Usuario:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-border-color: #2a4d69; -fx-border-radius: 5; -fx-padding: 5;"/>

    <Label text="Contraseña:" GridPane.rowIndex="2" GridPane.columnIndex="0"
           style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   style="-fx-border-color: #2a4d69; -fx-border-radius: 5; -fx-padding: 5;"/>

    <!-- Buttons -->
    <Button text="Iniciar Sesión" onAction="#login" GridPane.rowIndex="3" GridPane.columnIndex="0"
            style="-fx-background-color: #2a9df4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    <Button text="Registrarse" onAction="#register" GridPane.rowIndex="3" GridPane.columnIndex="1"
            style="-fx-background-color: #ff5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

</GridPane>
